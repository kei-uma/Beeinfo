
<% check = 0 %>


<div class="container container-large">
  <div class="col-md-2 sidebar">
    <% @categories.each do |category| %>
      <p><%= link_to category.name, category %></p>
    <% end %>
  </div>

  <div class="col-md-10">
    <% if check == 0 then %>
    <div class="col-md-8">
      <div class="row">
        <div class = "col-md-12">
    <% else %>
      <div class="col-md-12">
    <% end %>
      <h1>注目記事</h1>
      <%= @category.find_by(id: @user.user_categories.find_by(priority: 1).category_id).name %>
      <% @edits.where(category_id: @user.user_categories.find_by(priority: 1).category_id).each do |edit| %>
      <div class="row">
        <div class="col-md-12">
          <% if edit.url != '' %>
            <% image_url = edit.url %>
          <% else %>
            <% image_url = '/assets/image1.JPG' %>
          <% end %>
          <div style="text-align:center;"><img src="<%= image_url %>" alt="" width="100%" style="border: solid 1px #000000;"/></div>
          <br>
        </div>

        <div class="col-md-12">
          <h2><%= link_to edit.title, edit %></h2>
        </div>
      </div>
      <% end %>

    <% if check == 0 then %>
      <br>
      </div>
      <div class="col-md-12">
    <% elsif check == 1 then %>
      </div>
      <div class="col-md-6">
    <% else %>
      </div>
      <div class="col-md-12">
    <% end %>
      <h1>新着記事</h1>
      <%= @category.find_by(id: @user.user_categories.find_by(priority: 2).category_id).name %>
      <% @edits.where(category_id: @user.user_categories.find_by(priority: 2).category_id).each do |edit| %>
      <div class="row">
        <div class="col-md-3">
          <% if edit.url != '' %>
            <% image_url = edit.url %>
          <% else %>
            <% image_url = '/assets/image1.JPG' %>
          <% end %>
          <div style="text-align:center;"><img src="<%= image_url %>" alt="" width="130" height="80" style="border: solid 1px #000000;"/></div>
          <br>
        </div>

        <div class="col-md-9">
          <h3><%= link_to edit.title, edit %></h3>
        </div>
      </div>
      <% end %>

      <% if check == 0 then %>
          </div>
        </div>
      </div>
      <% elsif check == 1 then %>
        </div>
      <% else %>
        </div>
      <% end %>


    <% if check == 0 then %>
      <div class="col-md-4">
    <% elsif check == 1 then %>
      <div class="col-md-6">
    <% elsif check == 2 %>
      <div class="col-md-12">
    <% end %>
      <h1>ランキング</h1>
      <%= @category.find_by(id: @user.user_categories.find_by(priority: 3).category_id).name %>
      <% @edits.where(category_id: @user.user_categories.find_by(priority: 3).category_id).each do |edit| %>
        <div class="row">
          <div class="col-md-4">
            <% if edit.url != '' %>
              <% image_url = edit.url %>
            <% else %>
              <% image_url = '/assets/default.jpg' %>
            <% end %>
            <div style="text-align:center;"><img src="<%= image_url %>" alt="" width="100" height="100" style="border: solid 1px #000000;"/></div>
            <br>
          </div>
          <div class="col-md-8">
            <h3><%= link_to edit.title, edit %></h3>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
<%= link_to 'カスタマイズ', edit_user_path(@user) %>